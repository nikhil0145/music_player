<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    tools:context=".fragments.AboutUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#080808"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nikhil_pic"
            android:layout_marginTop="80dp"
            android:id="@+id/card_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIKHIL KUMAR"
            android:id="@+id/card_name"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/card_img"
            android:layout_marginTop="10dp"
            android:textColor="#080808"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nikhil12945@gmail.com"
            android:textStyle="bold"
            android:layout_below="@+id/card_name"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/card_email"
            android:textColor="#080808"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Of Bhagalpur College Of"
            android:textStyle="bold"
            android:layout_below="@+id/card_email"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/card_college"
            android:textColor="#080808"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineering, Bihar"
            android:textStyle="bold"
            android:layout_below="@+id/card_college"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#080808"
            />
    </RelativeLayout>

</FrameLayout>